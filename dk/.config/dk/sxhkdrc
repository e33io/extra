# =====================================================================
# dk specific hotkeys
# =====================================================================

# view workspace, send & follow window to workspace,
# or send window to workspace (by number)
super + {_,shift + ,ctrl + }{1-9}
	dkcmd ws {view,follow,send} {1-9}

# view next/previous workspace
ctrl + alt + {Left,Right}
	dkcmd ws view {prev,next}

# send & follow window to next/previous workspace
super + shift + {Left,Right}
	dkcmd ws follow {prev,next}

# close window, toggle floating window,
# or toggle fullscreen window
super + shift + {q,space,f}
	dkcmd win {kill,float,full}

# swap tiled window in/out of master, cycle window
# in place, or toggle sticky window
super + {space,Tab,s}
	dkcmd win {swap,cycle,stick}

# move window up/down the stack
super + {Up,Down}
	dkcmd win mvstack {up,down}

# focus next/previous window
super + {Left,Right}
	dkcmd win focus {prev,next}

# move window
super + ctrl + {Left,Down,Up,Right}
	dkcmd win resize {x=-80,y=+80,y=-80,x=+80}

# resize window
ctrl + shift + {Left,Down,Up,Right}
	dkcmd win resize {w=-40,h=+40,h=-40,w=+40}

# change active workspace layout
super + alt + {t,r,m,g,s,d,f,u}
	dkcmd set layout {tile,rtile,mono,grid,spiral,dwindle,none,tstack}

# change number of windows in master or first stack
super + {_,shift + }{period,comma}
	dkcmd set {master,stack} {+1,-1}

# change window gap width
super + {equal,minus}
	dkcmd set gap {+4,-4}

# quit dk
super + shift + c
	dkcmd exit

# restart dk
super + ctrl + r
	dkcmd restart

# reload dk configuration
super + shift + r
	$HOME/.config/dk/dkrc

# =====================================================================
# wm independent hotkeys
# =====================================================================

# power menu or lock session
super + {p,x}
	{rofi-power.sh,loginctl lock-session}

# disable dpms to keep session awake (like Caffeine) or
# re-enable dpms to resume screen blanking and locking
super + ctrl + {equal,minus}
	stay-awake.sh {on,off}

# volume and mic controls
XF86Audio{LowerVolume,RaiseVolume}
	pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%
XF86Audio{Mute,MicMute}
	pactl set-{sink,source}-mute @DEFAULT_{SINK,SOURCE}@ toggle

# media player controls
XF86Audio{Prev,Play,Next}
	playerctl --all-players {previous,play-pause,next}
ctrl + {Left,Down,Right}
	playerctl --all-players {previous,play-pause,next}

# Send notication of music that's now playing
super + m
	now-playing.sh

# monitor display brightness controls
XF86MonBrightness{Down,Up}
	brightness.sh {down,up}

# program launcher or list of open windows
super + {d,o}
	rofi -show {drun,window}

# terminal emulator
super + Return
	kitty

# file manager
super + shift + Return
	thunar

# web browser
super + b
	GDK_SCALE=1 brave-browser

# text editor
super + t
	mousepad
#super + t
#	subl
#super + shift + t
#	subl --launch-or-new-window

# git tool
#super + g
#	smerge

# ftp tool
super + f
	filezilla

# image editor
super + i
	gimp

# signal app
super + c
	GDK_SCALE=1 signal-desktop

# fullscreen, window, or selected area screenshots
{_,super + ,shift + }Print
	screenshot.sh {fullscreen,window,selection}

# reload sxhkd configuration
super + Escape
	pkill -USR1 -x sxhkd
