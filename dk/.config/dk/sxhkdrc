# =====================================================================
# dk specific hotkeys
# =====================================================================

# quit dk
super + shift + c
	dkcmd exit

# restart dk
super + ctrl + r
	dkcmd restart

# reload dkrc
super + shift + r
	$HOME/.config/dk/dkrc

# view workspace, send & follow window to workspace,
# or send window to workspace (by number)
super + {_,shift + ,ctrl + }{1-9}
	dkcmd ws {view,follow,send} {1-9}

# send & follow window to next/previous workspace
super + shift + {Left,Right}
	dkcmd ws follow {prev,next}

# view next/previous workspace
ctrl + alt + {Left,Right}
	dkcmd ws view {prev,next}

# close window, toggle floating window,
# or toggle fullscreen window
super + shift + {q,space,f}
	dkcmd win {kill,float,full}

# swap tiled window in/out of master, cycle window
# in place, or toggle sticky window
super + {space,Tab,s}
	dkcmd win {swap,cycle,stick}

# move window up/down the stack
super + {Up,Down}
	dkcmd win mvstack {up,down}

# focus next/previous window
super + {Left,Right}
	dkcmd win focus {prev,next}

# move window
super + ctrl + {Left,Down,Up,Right}
	dkcmd win resize {x=-80,y=+80,y=-80,x=+80}

# resize window
ctrl + shift + {Left,Down,Up,Right}
	dkcmd win resize {w=-40,h=+40,h=-40,w=+40}

# change active workspace layout
super + alt + {t,r,m,g,s,d,f,u}
	dkcmd set layout {tile,rtile,mono,grid,spiral,dwindle,none,tstack}

# change number of windows in master or first stack
super + {_,shift + }{period,comma}
	dkcmd set {master,stack} {+1,-1}

# change window gap width
super + {equal,minus}
	dkcmd set gap {+4,-4}

# =====================================================================
# wm independent hotkeys
# =====================================================================

# list of open windows
super + o
	rofi -show window

# power menu
super + p
	rofi-power.sh

# lock session (to activate xss-lock)
super + x
	loginctl lock-session

# disable dpms to keep session awake (like Caffeine)
super + ctrl + equal
	stay-awake.sh on

# re-enable dpms to resume screen blanking and locking
super + ctrl + minus
	stay-awake.sh off

# program launcher
super + d
	rofi -show drun

# terminal emulator
super + Return
	kitty

# file manager
super + shift + Return
	thunar

# web browser
super + b
	GDK_SCALE=1 brave-browser

# text editor
super + t
	mousepad

# signal app
super + c
	GDK_SCALE=1 signal-desktop

# fullscreen, window, or selected area screenshots
Print
	screenshot.sh fullscreen
super + Print
	screenshot.sh window
shift + Print
	screenshot.sh selection

# volume and mic controls
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle

# monitor display brightness controls
XF86MonBrightnessDown
	brightness.sh down
XF86MonBrightnessUp
	brightness.sh up

# media player controls
XF86AudioPrev
	playerctl --all-players previous
XF86AudioPlay
	playerctl --all-players play-pause
XF86AudioNext
	playerctl --all-players next

# reload sxhkd configuration
super + Escape
	pkill -USR1 -x sxhkd
