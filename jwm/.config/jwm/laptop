<?xml version="1.0"?>
<JWM>

    <!-- Laptop-specific configurations -->

    <!-- Lock screen and suspend system at designated dpms time -->
    <StartupCommand>xss-lock -n sh ~/.local/bin/i3lock-suspend.sh -l -- i3lock -n -c 252525</StartupCommand>
    <StartupCommand>sh -c "sleep 1; xset dpms 300 300 300"</StartupCommand>

    <!-- Monitor display brightness controls -->
    <Key key="XF86MonBrightnessDown">exec:~/.local/bin/brightness.sh down</Key>
    <Key key="XF86MonBrightnessUp">exec:~/.local/bin/brightness.sh up</Key>

</JWM>
