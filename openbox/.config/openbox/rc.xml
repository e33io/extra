    <keybind key="W-S-e">
      <action name="Exit">
        <prompt>yes</prompt>
      </action>
    </keybind>
    <!-- Keybinding to restart Openbox -->
    <keybind key="W-S-r">
      <action name="Restart"/>
    </keybind>
