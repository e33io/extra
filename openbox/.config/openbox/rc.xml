      <action name="Execute">
        <name>Stay Awake ON</name>
        <command>stay-awake.sh on</command>
      </action>
    </keybind>
    <!-- Re-enable dpms to resume screen blanking and locking -->
    <keybind key="W-C-minus">
      <action name="Execute">
        <name>Stay Awake OFF</name>
        <command>stay-awake.sh off</command>
      </action>
    </keybind>
