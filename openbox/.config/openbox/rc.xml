      <action name="GoToDesktop">
        <to>1</to>
      </action>
    </keybind>
    <keybind key="W-2">
      <action name="GoToDesktop">
        <to>2</to>
      </action>
    </keybind>
    <keybind key="W-3">
      <action name="GoToDesktop">
        <to>3</to>
      </action>
    </keybind>
    <keybind key="W-4">
      <action name="GoToDesktop">
        <to>4</to>
      </action>
    </keybind>
    <keybind key="W-5">
      <action name="GoToDesktop">
        <to>5</to>
      </action>
    </keybind>
    <keybind key="W-6">
      <action name="GoToDesktop">
        <to>6</to>
      </action>
    </keybind>
    <keybind key="W-7">
      <action name="GoToDesktop">
        <to>7</to>
      </action>
    </keybind>
    <keybind key="W-8">
      <action name="GoToDesktop">
        <to>8</to>
      </action>
    </keybind>
    <keybind key="W-9">
      <action name="GoToDesktop">
        <to>9</to>
      </action>
    </keybind>
    <!-- Keybindings to switch to next/previous desktop -->
    <keybind key="C-A-Left">
      <action name="GoToDesktop">
        <to>previous</to>
        <wrap>yes</wrap>
      </action>
    </keybind>
    <keybind key="C-A-Right">
      <action name="GoToDesktop">
        <to>next</to>
        <wrap>yes</wrap>
      </action>
    </keybind>
    <!-- Keybindings to send window to select desktop -->
    <keybind key="W-S-1">
      <action name="SendToDesktop">
        <to>1</to>
      </action>
    </keybind>
    <keybind key="W-S-2">
      <action name="SendToDesktop">
        <to>2</to>
      </action>
    </keybind>
    <keybind key="W-S-3">
      <action name="SendToDesktop">
        <to>3</to>
      </action>
    </keybind>
    <keybind key="W-S-4">
      <action name="SendToDesktop">
        <to>4</to>
      </action>
    </keybind>
    <keybind key="W-S-5">
      <action name="SendToDesktop">
        <to>5</to>
      </action>
    </keybind>
    <keybind key="W-S-6">
      <action name="SendToDesktop">
        <to>6</to>
      </action>
    </keybind>
    <keybind key="W-S-7">
      <action name="SendToDesktop">
        <to>7</to>
      </action>
    </keybind>
    <keybind key="W-S-8">
      <action name="SendToDesktop">
        <to>8</to>
      </action>
    </keybind>
    <keybind key="W-S-9">
      <action name="SendToDesktop">
        <to>9</to>
      </action>
    </keybind>
    <!-- Keybindings to send window to next/previous desktop -->
    <keybind key="W-S-Left">
      <action name="SendToDesktop">
        <to>previous</to>
        <wrap>yes</wrap>
      </action>
    </keybind>
    <keybind key="W-S-Right">
      <action name="SendToDesktop">
        <to>next</to>
        <wrap>yes</wrap>
      </action>
    </keybind>
    <!-- Keybindings to move window -->
    <keybind key="W-C-Right">
      <action name="MoveRelative">
        <x>100</x>
        <y>0</y>
      </action>
    </keybind>
    <keybind key="W-C-Left">
      <action name="MoveRelative">
        <x>-100</x>
        <y>0</y>
      </action>
    </keybind>
    <keybind key="W-C-Up">
      <action name="MoveRelative">
        <x>0</x>
        <y>-100</y>
      </action>
    </keybind>
    <keybind key="W-C-Down">
      <action name="MoveRelative">
        <x>0</x>
        <y>100</y>
      </action>
    </keybind>
    <!-- Keybindings to change window size -->
    <keybind key="C-S-Right">
      <action name="ResizeRelative">
        <right>50</right>
      </action>
    </keybind>
    <keybind key="C-S-Left">
      <action name="ResizeRelative">
        <right>-50</right>
      </action>
    </keybind>
    <keybind key="C-S-Up">
      <action name="ResizeRelative">
        <bottom>-50</bottom>
      </action>
    </keybind>
    <keybind key="C-S-Down">
      <action name="ResizeRelative">
        <bottom>50</bottom>
      </action>
    </keybind>
    <!-- Keybindings to switch window focus -->
    <keybind key="A-Tab">
      <action name="NextWindow">
        <finalactions>
          <action name="Focus"/>
          <action name="Raise"/>
          <action name="Unshade"/>
        </finalactions>
      </action>
    </keybind>
    <keybind key="A-S-Tab">
      <action name="PreviousWindow">
        <finalactions>
          <action name="Focus"/>
          <action name="Raise"/>
          <action name="Unshade"/>
        </finalactions>
      </action>
    </keybind>
    <keybind key="W-A-Right">
      <action name="NextWindow">
        <finalactions>
          <action name="Focus"/>
          <action name="Raise"/>
          <action name="Unshade"/>
        </finalactions>
      </action>
    </keybind>
    <keybind key="W-A-Left">
      <action name="PreviousWindow">
        <finalactions>
          <action name="Focus"/>
          <action name="Raise"/>
          <action name="Unshade"/>
        </finalactions>
      </action>
    </keybind>
    <!-- Keybinding to move window to bottom of stack -->
    <keybind key="A-Escape">
      <action name="Lower"/>
      <action name="FocusToBottom"/>
      <action name="Unfocus"/>
    </keybind>
    <!-- Keybinding to toggle hide all windows -->
    <keybind key="W-S-d">
      <action name="ToggleShowDesktop"/>
    </keybind>
    <!-- Keybindings for window controls -->
    <keybind key="W-S-q">
      <action name="Close"/>
    </keybind>
    <keybind key="A-space">
      <action name="ShowMenu">
        <menu>client-menu</menu>
      </action>
    </keybind>
    <!-- Keybinding to toggle maximize/unmaximize window -->
    <keybind key="W-S-m">
      <action name="ToggleMaximize"/>
    </keybind>
    <!-- Keybinding to toggle fullscreen window -->
    <keybind key="W-S-f">
      <action name="ToggleFullscreen"/>
    </keybind>
    <!-- Keybinding to center window -->
    <keybind key="W-S-space">
      <action name="Unmaximize"/>
      <action name="MoveResizeTo">
        <x>center</x>
        <y>center</y>
      </action>
    </keybind>
    <!-- Keybindings for window tiling -->
    <keybind key="W-Left">
      <action name="If">
        <query>
          <maximizedvertical>no</maximizedvertical>
        </query>
        <then>
          <action name="UnmaximizeFull"/>
          <action name="MaximizeVert"/>
          <action name="MoveResizeTo">
            <width>50%</width>
            <x>0</x>
          </action>
        </then>
        <else>
          <action name="Unmaximize"/>
          <action name="MoveResizeTo">
            <x>10%</x>
            <y>center</y>
            <width>45%</width>
            <height>60%</height>
          </action>
        </else>
      </action>
    </keybind>
    <keybind key="W-Right">
      <action name="If">
        <query>
          <maximizedvertical>no</maximizedvertical>
        </query>
        <then>
          <action name="UnmaximizeFull"/>
          <action name="MaximizeVert"/>
          <action name="MoveResizeTo">
            <width>50%</width>
            <x>-0</x>
          </action>
        </then>
        <else>
          <action name="Unmaximize"/>
          <action name="MoveResizeTo">
            <x>45%</x>
            <y>center</y>
            <width>45%</width>
            <height>60%</height>
          </action>
        </else>
      </action>
    </keybind>
    <keybind key="W-Up">
      <action name="If">
        <query>
          <maximizedhorizontal>no</maximizedhorizontal>
        </query>
        <then>
          <action name="UnmaximizeFull"/>
          <action name="MaximizeHorz"/>
          <action name="MoveResizeTo">
            <height>50%</height>
            <y>0</y>
          </action>
        </then>
        <else>
          <action name="Unmaximize"/>
          <action name="MoveResizeTo">
            <x>center</x>
            <y>5%</y>
            <width>45%</width>
            <height>60%</height>
          </action>
        </else>
      </action>
    </keybind>
    <keybind key="W-Down">
      <action name="If">
        <query>
          <maximizedhorizontal>no</maximizedhorizontal>
        </query>
        <then>
          <action name="UnmaximizeFull"/>
          <action name="MaximizeHorz"/>
          <action name="MoveResizeTo">
            <height>50%</height>
            <y>-0</y>
          </action>
        </then>
        <else>
          <action name="Unmaximize"/>
          <action name="MoveResizeTo">
            <x>center</x>
            <y>35%</y>
            <width>45%</width>
            <height>60%</height>
          </action>
        </else>
      </action>
    </keybind>
    <!-- Keybindings for Rofi menus -->
    <keybind key="W-d">
